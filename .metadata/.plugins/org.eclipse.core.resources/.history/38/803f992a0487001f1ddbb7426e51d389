package operations;
import entity.*;
import service.*;
import java.util.Date;

public class Main {
    public static void main(String[] args) {
        try {
            Hospital hospital = new Hospital();
            Appointment appointment = new Appointment();

            // Add patients
            Patient p1 = new Patient("P1", "John Doe", 30, "Male", "1234567890");
            hospital.addPatient(p1);

            // Add doctors
            Doctor d1 = new Doctor("D1", "Dr. Smith", "Cardiology", "0987654321", true);
            hospital.addDoctor(d1);

            // Schedule an appointment
            appointment.scheduleAppointment("P1", "D1", new Date());

            // Display appointments by doctor
            appointment.displayAppointmentsByDoctor("D1");

        } catch (Exception e) {
            System.out.println(e.getMessage());
        }
    }
}

